<%- include("header") -%>


    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <!--Dodavanje for loop da bismo mogli da dodajemo stavke koje zelimo u nizu.-->
        <% for (var i=0; i<NewListItems.length ; i++) { %>
            <div class="item">
                <input type="checkbox" name="" value="">
                <p>
                    <%= NewListItems[i] %>
                </p>

            </div>

            <% } %>
                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item">
                    <button class="btn btn-white" type="submit" name="list" value=<%=listTitle %>>+</button>

                </form>

    </div>

    <%- include("footer") -%>